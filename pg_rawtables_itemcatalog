CREATE TABLE Category (
    category_id serial PRIMARY KEY,
    category_name varchar(250) NOT NULL,
    user_id integer NOT NULL,
    FOREIGN KEY (user_id) REFERENCES User (user_id)
    
);

CREATE TABLE Category (category_id serial PRIMARY KEY,category_name varchar(250) NOT NULL,user_id integer NOT NULL,FOREIGN KEY (user_id) REFERENCES Users (user_id));
Insert into Category (category_name, user_id) VALUES ('Cricket',1);
