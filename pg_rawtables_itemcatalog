CREATE TABLE User (
    user_id integer PRIMARY KEY GENERATED BY DEFAULT AS IDENTITY,
    user_name varchar(250) NOT NULL,
    user_email varchar(250) NOT NULL,
    user_picture varchar(250)
    
);

CREATE TABLE Users (user_id serial PRIMARY KEY,user_name varchar(250) NOT NULL,user_email varchar(250) NOT NULL,user_picture varchar(250));
